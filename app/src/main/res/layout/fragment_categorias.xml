<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titulo_cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/categorias"
                android:textColor="@color/ColorPrimaryDark"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Robolid cuenta con diversas categorías disponibles para participar en el concurso, a continuación puedes ver información sobre cada una de ellas y sus correspondientes normativas." />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#ffffffff"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Rastreadores"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/ColorPrimaryDark"
                    android:textIsSelectable="false"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:src="@drawable/rastreadores_200" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="El concurso de rastreadores valora la habilidad de un robot para recorrer un camino sinuoso, con bifurcaciones buenas y malas, en el menor tiempo posible. Aquel robot que tarde menor tiempo en recorrer el circuito con el menor número de fallos se convierte en el ganador." />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/archivo" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#ffffffff"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:text="Velocistas"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/ColorPrimaryDark"
                    android:textIsSelectable="false"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:src="@drawable/velocistas_200" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="El concurso de velocistas consiste en una carrera de persecución entre dos robots en una pista cerrada. Los robots comienzan en puntos opuestos del recorrido avanzando ambos en el mismo sentido. El ganador es aquel robot que demuestre mayor velocidad que su adversario." />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/archivo" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#ffffffff"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Sumo"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/ColorPrimaryDark"
                    android:textIsSelectable="false"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView18"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:src="@drawable/sumo_200" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="El concurso de robots sumo consiste en una lucha por mantenerse dentro de la pista de combate o tatami. El robot ganador es aquel que logre mayor cantidad de puntos por expulsar al contrario sin salirse él mismo del tatami." />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/archivo" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#ffffffff"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="8dp"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Minisumo"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/ColorPrimaryDark"
                    android:textIsSelectable="false"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/imageView19"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:src="@drawable/minisumo_200" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="El concurso de robots minisumo consiste en una lucha por mantenerse dentro de una pista de combate o tatami de reducido tamaño. El robot ganador es aquel que logre mayor cantidad de puntos por expulsar al contrario sin salirse él mismo del tatami." />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/archivo" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>